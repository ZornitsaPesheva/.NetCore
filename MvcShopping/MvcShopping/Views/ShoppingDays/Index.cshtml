@model MvcShopping.Models.StoreViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="ShoppingDays" asp-action="Index" method="get">
    <p>
        <select asp-for="ShoppingStore" asp-items="Model.Stores">
            <option value="">All</option>
        </select>

        Date: <input type="date" name="searchDate">
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ShoppingDays[0].ShoppingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShoppingDays[0].Store)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShoppingDays[0].Sum)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ShoppingDays) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ShoppingDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Store)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sum)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
